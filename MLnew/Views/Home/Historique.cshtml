<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

</head>
<body>
    <div style="text-align: center; margin-top: 50px;">
        <h2>Sélection de date et d'options</h2>
        <form id="selectionForm">
            <input type="checkbox" id="dateCheckbox" name="dateCheckbox">
            <label for="startTime">1.Duree-Début :</label>
            <input type="text" id="startTime" name="startTime" placeholder="Sélectionnez la date et l'heure" style="width: 250px;"><br><br>
            <label for="endTime">-Fin :</label>
            <input type="text" id="endTime" name="endTime" placeholder="Sélectionnez la date et l'heure" style="width: 250px;"><br><br>

            <input type="checkbox" id="userCheckbox" name="userCheckbox">
            <label for="user">2.Utilisateur :</label>
            <select id="user">
                <option value="user1">Utilisateur 1</option>
                <option value="user2">Utilisateur 2</option>
                <option value="user3">Utilisateur 3</option>
            </select><br><br>

            <input type="checkbox" id="modeleCheckbox" name="modeleCheckbox">
            <label for="modele">3.Modèle :</label>
            <select id="modele">
                <option value="svm">SVM</option>
                <option value="knn">KNN</option>
                <option value="RandomForest">Random Forest</option>
            </select><br><br>

            <button type="button" onclick="submitForm()">Soumettre</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>

    <script>
        flatpickr("#startTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "fr"
        });

        flatpickr("#endTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "fr"
        });

        function submitForm() {
            const form = document.getElementById("selectionForm");
            const formData = new FormData(form);

            for (const [key, value] of formData.entries()) {
                console.log(key, value);
            }
        }
    </script>
</body>
</html>
