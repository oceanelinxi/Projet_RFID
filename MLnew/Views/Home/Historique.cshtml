<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div style="text-align: left; margin-top: 50px;">
        <h2>Sélection de date et d'options</h2>
        <form id="selectionForm" asp-controller="Home" asp-action="Historique">
            <input type="checkbox" id="dateCheckbox" name="dateCheckbox">
            <label for="startTime">1.Duree-Début :</label>
            <input type="text" id="startTime" name="start" placeholder="Sélectionnez la date et l'heure" style="width: 250px;"><br><br>
            <label for="endTime">-Fin :</label>
            <input type="text" id="endTime" name="end" placeholder="Sélectionnez la date et l'heure" style="width: 250px;"><br><br>

            <input type="checkbox" id="userCheckbox" name="userCheckbox">
            <label for="user">2.Utilisateur :</label>
            <select id="user" name="userIds">
                @foreach (var user in ViewBag.users)
                {
                    <option value=@user.Id>@user.UserName</option>
                }
            </select><br><br>

            <input type="checkbox" id="modeleCheckbox" name="modeleCheckbox">
            <label for="modele">3.Modèle :</label>
            <select id="modele" name="modelName">
                <option value="svm">SVM</option>
                <option value="knn">KNN</option>
                <option value="RandomForest">Random Forest</option>
            </select><br><br>

            <button type="button" onclick="submitForm()">Valider Choix</button>
            <br /><br />
            <input type="submit" value="Extraire Historique" />
        </form>
    </div>
    @if (ViewBag.simulation != null)
    {
        <div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 25">Id</th>
                        <th style="width: 400">    Methode    </th>
                        <th style="width: 100">Accuracy</th>
                        <th style="width: 100">   Duree   </th>
                        <th style="width: 100">Date de simulation</th>
                        <th style="width: 100"> Param 1</th>
                        <th style="width: 100"> Param 2</th>
                        <th style="width: 100"> Param 3</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Simulation sim in ViewBag.simulation)
                    {
                        <tr>
                            <td>@sim.Id</td>
                            <td>@sim.Methode.Nom</td>
                            <td>@sim.Accuracy</td>
                            <td>@sim.Duree</td>
                            <td>@sim.DateSimulation</td>
                            <td>@sim.Methode.Param1</td>
                            <td>@sim.Methode.Param2</td>
                            <td>@sim.Methode.Param3</td>
                        </tr>
                    }
                </tbody>
            </table>
            <br /><br /><br />
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>
        flatpickr("#startTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "fr"
        });

        flatpickr("#endTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "fr"
        });

        function submitForm() {
            const form = document.getElementById("selectionForm");
            const formData = new FormData(form);

            for (const [key, value] of formData.entries()) {
                console.log(key, value);
            }
        }
    </script>
</body>
</html>
