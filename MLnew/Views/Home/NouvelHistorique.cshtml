<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Style_Historique.css">
    <link rel="stylesheet" href="/css/NouvelHistorique.css">
</head>
<body>
    <div class="filtres">
        <form method="post" asp-action="FilterbyModeleName" asp-controller="Home">
            <input type="checkbox" name="user" value="true"/>
            <label>User</label>
            <select id="userSelect" name="userSelect" value="true">
                @foreach(var user in ViewBag.users)
                {
                    <option value=@user.Id>@user.UserName</option>
                }
            </select>
                        
            <input type="checkbox" name="modele" value="true"/>
            <label>Modele</label>
            <select name="modeleSelect">
                <option value="Analytique">"Analytique"</option>
                <option value="RandomForest">"RandomForest"</option>
                <option value="SVM">"SVM"</option>
                <option value="KNN">"KNN"</option>
            </select>

            <input type="checkbox" name="datesim" value="true" /><label>Time</label>
            <input type="date" id="startTime" name="start" placeholder="Sélectionnez la date de début" style="width: 90px;">
            <input type="date" id="endTime" name="end" placeholder="Sélectionnez la date de début" style="width: 90px;">

            <input type="submit" id="submit" value="valider" />
            
            <br />
        </form>
    </div>
    <div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id simulation</th>
                    <th>    User    </th>
                    <th>Date Simulation</th>
                    <th>   Id Modele   </th>
                    <th>Nom Modele  </th>
                    <th>Duree </th>
                    <th>Accuracy</th>
                    <th> _</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.modeles != null)
                {
                    foreach (Modele mod in ViewBag.modeles)
                    {
                        <tr>
                            <td>@mod.HistoriqueID</td>
                            <td>@mod.Historique.UserId</td>
                            <td>@mod.Historique.DateSimulation </td>
                            <td>@mod.ModeleID</td>
                            <td>@mod.Nom</td>
                            <td>@mod.DureeSec</td>
                            <td>@mod.Accuracy</td>
                            <td> <a asp-controller="Home" asp-action="Details" asp-route-id="@mod.ModeleID" class="btn btn-primary">See More</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br />
    </div>
    <div>
        <form method="post" asp-action="IndexHistorique" asp-controller="Home">
            <input type="submit" value="Reinitialiser les filtres" />
            @if (User.IsInRole("Administrateur"))
            {
                <a asp-action="ClearHistory" asp-controller="Home">Supprimer tout l'historique'</a>
            }            
        </form>
    </div>
        <br />

    <div>
        Correspondance userId et Email
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>userId</th>
                    <th>    Email    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                    </tr>
                }
            </tbody>
        <br />
        <br />
        </table>
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>
            flatpickr("#startTime", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                locale: "fr"
            });

        flatpickr("#endTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "fr"
        });

        document.getElementById('selectionForm').addEventListener('submit', function (event) {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;

            if (!startTime || !endTime) {
                alert('Veuillez sélectionner les dates de début et de fin.');
                event.preventDefault();  // 阻止表单提交
            }
        });

        function submitForm() {
            const form = document.getElementById("selectionForm");
            const formData = new FormData(form);

            for (const [key, value] of formData.entries()) {
                console.log(key, value);
            }
        }
    </script>
    <br />
    <br />
    <br />
</body>
</html>