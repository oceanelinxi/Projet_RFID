<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Style_Historique.css">
</head>
<body>
    </div>
    
        <div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 25">Id simulation</th>
                        <th style="width: 400">    User    </th>
                        <th style="width: 100">Date Simulation</th>
                        <th style="width: 100">   Id Modele   </th>
                        <th style="width: 100">Nom Modele  </th>
                        <th style="width: 100">Duree </th>
                        <th style="width: 100">Accuracy</th>
                        <th style="width: 100"> _</th>
                    </tr>
                </thead>
                <tbody>
                @if (ViewBag.simulation != null)
                {
                    @foreach (Simulation sim in ViewBag.simulation)
                    {
                        <tr>
                            <td>@sim.Id</td>
                            <td>@sim.Methode.Nom</td>
                            <td>@sim.Accuracy</td>
                            <td>@sim.Duree</td>
                            <td>@sim.DateSimulation</td>
                            <td>@sim.Methode.Param1</td>
                            <td>@sim.Methode.Param2</td>
                            <td>@sim.Methode.Param3</td>
                        </tr>
                    }
                </tbody>
            </table>
            <br /><br /><br />
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
</body>
</html>