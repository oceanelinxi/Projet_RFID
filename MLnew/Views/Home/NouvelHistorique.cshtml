<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Style_Historique.css">
</head>
<body>
    
    <div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id simulation</th>
                    <th>    User    </th>
                    <th>Date Simulation</th>
                    <th>   Id Modele   </th>
                    <th>Nom Modele  </th>
                    <th>Duree </th>
                    <th>Accuracy</th>
                    <th> _</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.modeles != null)
                {
                    foreach (Modele mod in ViewBag.modeles)
                    {
                        <tr>
                            <td>@mod.HistoriqueID</td>
                            <td>@mod.Historique.UserId</td>
                            <td>@mod.Historique.DateSimulation </td>
                            <td>@mod.ModeleID</td>
                            <td>@mod.Nom</td>
                            <td>@mod.DureeSec</td>
                            <td>@mod.Accuracy</td>
                            <td> <button>See More</button></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br /><br /><br />
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
</body>
</html>