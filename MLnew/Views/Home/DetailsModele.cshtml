@{

    Modele modele = new Modele();
    
    modele = ViewBag.OneModele as Modele;
}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sélection de date et d'options</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/Style_Historique.css">
        <link rel="stylesheet" href="/css/NouvelHistorique.css">
    </head>
    <body>
        
        <form method="post" asp-controller="Home" asp-action="IndexHistorique">
        <strong><h1> Détails du Modele</h1></strong>
        @if(modele != null)
            {
                <h2>Methode : @modele.Nom</h2>
                <h3>Accuracy : @modele.Accuracy</h3>
                <h3>Durée d'exécution  : @modele.DureeSec</h3>
                @if(modele.Nom == "Analytique")
                {
                    <div class="accordion-item" id="optionsAccordion">
                                                
                            <div class="accordion-body">

                                @if (modele.Parametres != null)
                                { 
                                    <div class="parametres">
                                        @foreach(Parametre param in modele.Parametres)
                                        {
                                            <p>
                                                <strong>@param.Nom</strong>
                                                <label font="Cambria">@param.Valeur</label>
                                            </p>
                                            
                                        }
                                    </div>
                                }
                            </div>
                        
                    </div>
                }

                @if(modele.Nom == "RandomForest")
                {
                    <div class="accordion-item" id="optionsAccordion">
                                                
                            <div class="accordion-body">

                                @if (modele.Parametres != null)
                                {
                                    <div class="parameters">
                                        @foreach (Parametre param in modele.Parametres)
                                        {
                                            <p>
                                                <strong>@param.Nom</strong>
                                                <label font="Cambria">@param.Valeur</label>
                                            </p>                                            
                                        }
                                    </div>
                                }
                            </div>
                        
                    </div>
                }

                @if (modele.Nom == "SVM")
                {
                    <div class="accordion-item" id="optionsAccordion">
                       
                            <div class="accordion-body">

                                @if (modele.Parametres != null)
                                {
                                    <div class="parametres">
                                        @foreach (Parametre param in modele.Parametres)
                                        {
                                            <p>
                                                <strong>@param.Nom</strong>
                                                <label font="Cambria">@param.Valeur</label>
                                            </p>                                            
                                        }
                                    </div>
                                }
                            </div>
                        
                    </div>
                }
                
                @if (modele.Nom == "KNN")
                {
                    <div class="accordion-item" id="optionsAccordion">
                        
                            <div class="accordion-body">

                                @if (modele.Parametres != null)
                                {
                                    <div class="parametres">
                                        @foreach (Parametre param in modele.Parametres)
                                        {
                                            <p>
                                                <strong>@param.Nom</strong>
                                                <label font="Cambria">@param.Valeur</label>
                                            </p>                                            
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                }
        }
        <div float="center" margin="180px">
            <input type="submit" id="submit" value="OK" />
            @if (User.IsInRole("Administrateur"))
            {
                <button> <a asp-controller="Home" asp-action="RunAgain" asp-route-id="@modele.ModeleID">Relancer la simulation</a></button>
            }
        </div>
       

    </form>
    <br />
    <br />
</body>

</html>

