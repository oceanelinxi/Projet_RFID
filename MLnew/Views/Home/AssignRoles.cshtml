@{
    ViewData["Title"] = "Assign Roles";
    var userId = ViewBag.UserId;
    var email = ViewBag.Email;
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/AssignRoles.css">
</head>
<code>
    <h3>Modification du rôle pour @email</h3>
</code>
<body>

    <form asp-action="AssignRoles" method="post">
        <input type="hidden" name="userId" value="@userId" />
        <div class="form-group">
            <label for="role">Select Role</label>
            <select name="selectedRole" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))">
                <option value="">-- Sélectionner un rôle --</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
        <a asp-action="ManageRole" class="btn btn-secondary">Retour</a>
    </form>
</body>