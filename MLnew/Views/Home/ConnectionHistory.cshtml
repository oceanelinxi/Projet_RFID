@model IEnumerable<MLnew.Models.ConnectionHistory>

@{
    ViewData["Title"] = "Historique des connexions";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélection de date et d'options</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Style_ConnectionHistory.css">
</head>
<code>
    <h3>@ViewData["Title"]</h3>
</code>
<body>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Email</th>
                <th>Login Time</th>
                <th>Logout Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var history in Model)
            {
                <tr>
                    <td>@history.Id</td>
                    <td>@history.UserEmail</td>
                    <td>@history.LoginTime.ToString("g")</td>
                    <td>@history.LogoutTime?.ToString("g")</td>
                    <td>@history.Action</td>
                </tr>
            }
        </tbody>
    </table>
</body>
