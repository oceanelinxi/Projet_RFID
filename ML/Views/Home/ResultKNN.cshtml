
@{
    ViewData["Title"] = "ResultKNN";
}


<h2>KNN Algorithm Results</h2>

<!-- Afficher les paramètres du modèle -->
<div>
    <h3>Model Parameters</h3>
    <p><strong>n_neighbors:</strong> @ViewBag.n_neighbors</p>
    <p><strong>weights:</strong> @ViewBag.weights</p>
    <p><strong>metric:</strong> @ViewBag.metric</p>
</div>

<!-- Afficher les résultats du modèle -->
<div>
    <h3>Results</h3>
    @if (ViewBag.KNNResult != null)
    {
        <p><strong>Classification Report:</strong></p>
        <pre>@ViewBag.KNNResult.ClassificationReport</pre>

        <p><strong>Confusion Matrix:</strong></p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Predicted Class 1</th>
                    <th>Predicted Class 2</th>
                    <th>... more classes ...</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Actual Class 1</td>
                    <td>@ViewBag.KNNResult.ConfusionMatrix[0, 0]</td>
                    <td>@ViewBag.KNNResult.ConfusionMatrix[0, 1]</td>
                    <td>... more classes ...</td>
                </tr>
                <tr>
                    <td>Actual Class 2</td>
                    <td>@ViewBag.KNNResult.ConfusionMatrix[1, 0]</td>
                    <td>@ViewBag.KNNResult.ConfusionMatrix[1, 1]</td>
                    <td>... more classes ...</td>
                </tr>
                <!-- Repeat rows as needed for additional classes -->
            </tbody>
        </table>

        <p><strong>Accuracy:</strong> @ViewBag.KNNResult.Accuracy</p>
        <p><strong>Precision:</strong> @ViewBag.KNNResult.Precision</p>
        <p><strong>Recall:</strong> @ViewBag.KNNResult.Recall</p>
        <!-- Include any additional metrics that you have -->
    }
    else
    {
        <p>No results to display or model execution failed.</p>
    }
</div>

