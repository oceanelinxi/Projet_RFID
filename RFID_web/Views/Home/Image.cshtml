@{
    ViewBag.Title = "image";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exemple de diagramme à barres</title>
    <!-- Inclure la bibliothèque Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        canvas {
            width: 400px; /* Définir une largeur fixe */
            height: 300px; /* Définir une hauteur fixe */
        }
    </style>
</head>
<body>
    <canvas id="myChart"></canvas>

    <script>
        // Fonction pour mettre à jour le graphique en fonction des sélections de l'utilisateur
        function updateChart(selectedOptions) {
            // Obtenir l'élément canvas
            var ctx = document.getElementById('myChart').getContext('2d');
            // Créer un nouveau graphique
            var myChart = new Chart(ctx, {
                type: 'bar', // Diagramme en barres
                data: {
                    labels: ['Analytique', 'Random Forest', 'Naive Bayes', 'Logistic Regression'], // Étiquettes pour chaque barre
                    datasets: [{
                        label: 'Exactitude %',
                        data: selectedOptions, // Valeurs en pourcentage pour chaque barre
                        backgroundColor: [ // Couleur de fond des barres
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [ // Couleur de bordure des barres
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },

                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true,
                                callback: function (value) { return value + "%" } // Formatage des étiquettes de l'axe des y en pourcentage
                            }
                        }]
                    }
                }
            });
        }

        // Appel de la fonction au chargement de la page
        updateChart([75, 80, 85, 70]); // Valeurs par défaut

        // Récupérer les options sélectionnées depuis la page précédente et mettre à jour le graphique
        var selectedOptions = [75, 80, 85, 70]; // Valeurs par défaut
        // Exemple de récupération des valeurs depuis la page précédente et mise à jour du graphique
        // Ici, nous supposons que les valeurs sont stockées dans une variable JavaScript appelée selectedOptionsFromPreviousPage
        // Vous devrez peut-être ajuster cette partie pour correspondre à la façon dont vous stockez les valeurs provenant de la page précédente
        // selectedOptions = selectedOptionsFromPreviousPage;
        // updateChart(selectedOptions);
    </script>
</body>
</html>
